<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.fjj.phoneprotect.activities.AppManagerActivity">

    <TextView
        style="@style/safe_text_title"
        android:text="进程管理器" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_taskmanager_taskcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="内存可用:"
            android:textSize="15dp"></TextView>

        <TextView
            android:id="@+id/tv_taskmanager_tasksize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="SD卡可用:"
            android:textSize="15dp"></TextView>
    </LinearLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ListView
            android:fastScrollEnabled="true"
            android:id="@+id/lv_appmanager_applist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></ListView>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_appmanager_loadding"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="拼命加载中..."/>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_taskmanager_tasktype"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:background="#FF888888"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="用户进程:12个"/>
    </FrameLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >
        <Button
            android:onClick="selectall"
            android:background="@drawable/mybutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="全选"></Button>
        <Button
            android:onClick="unselect"
            android:background="@drawable/mybutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="反选"></Button>
        <Button
            android:onClick="clear"
            android:background="@drawable/mybutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="清理"></Button>
        <Button
            android:onClick="setting"
            android:background="@drawable/mybutton"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="设置"></Button>
    </LinearLayout>

</LinearLayout>
