<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activities.LostFindActivity">
<TextView
    style="@style/safe_text_title"
   android:text="手机防盗"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全号码"/>
        <TextView
            android:id="@+id/tv_lost_phone"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXXXX"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <TextView
            android:textSize="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="防盗保护是否开启"/>
        <CheckBox
            android:id="@+id/tv_lost_safestate"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           />
    </RelativeLayout>
    <TextView
        android:height="40dp"
        android:gravity="center_vertical"
        android:onClick="xiangdao"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="重新进入设置向导"></TextView>
    <TextView
        android:background="#33000000"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="功能简介:"></TextView>
    <TextView
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="GPS追踪: #*location*#"/>
    <TextView
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="播放报警音乐: #*alarm*#"/>
    <TextView
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="远程删除数据: #*delete*#"/>
    <TextView
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:textSize="15dp"
        android:layout_marginLeft="10dp"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="远程锁屏: #*lock*#"/>
</LinearLayout>
