<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <!--手机防盗样式-->
    <style name="safe_text_title">
        <item name="android:gravity">center</item>
        <item name="android:textSize">20dp</item>
        <item name="android:background">#92de80</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">60dp</item>
    </style>
    <style name="safe_text_content">
        <item name="android:textSize">15dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">40dp</item>
    </style>
    <style name="safe_text_list">
        <item name="android:drawableLeft">@android:drawable/btn_star_big_on</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="safe_button_next">
        <item name="android:onClick">next</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:drawableRight">@android:drawable/ic_media_next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">下一步</item>
    </style>
    <style name="safe_button_prev">
        <item name="android:onClick">prev</item>
        <item name="android:textSize">12dp</item>
        <item name="android:background">@drawable/mybutton</item>
        <item name="android:drawableRight">@android:drawable/ic_media_next</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:text">上一步</item>
    </style>
    <!--手机防盗样式-->
</resources>
