<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#ffffff">

        <com.fjj.wisdomBJ.UI.TouchedTabPageIndicator
            android:id="@+id/tpi_newsmenu"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"></com.fjj.wisdomBJ.UI.TouchedTabPageIndicator>

        <ImageView
            android:id="@+id/iv_newsmenu_next"
            android:layout_gravity="center_vertical"
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/news_cate_arr"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_newsmenu"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>
</LinearLayout>