<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
<ImageView
    android:id="@+id/iv_news_pic"
    android:layout_width="90dp"
    android:layout_height="60dp"
    android:layout_centerVertical="true"
    android:layout_margin="10dp"
    android:padding="0.2dp"
    android:background="#000000"
    android:scaleType="fitXY"
    android:src="@drawable/pic_item_list_default"/>
    <TextView
        android:id="@+id/tv_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_news_pic"
        android:layout_alignTop="@id/iv_news_pic"
        android:textColor="@android:color/black"
        android:text="lsakdjf;lsakjf;aslkjf;salkfjs;alfkj;saldfkjs;ldfkjkdlsf;jsadlfkjsa;lfkjsa;lfkjsd;lfksjad;flakjsfd"/>
    <TextView
        android:id="@+id/tv_news_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_toRightOf="@id/iv_news_pic"
        android:layout_alignBottom="@id/iv_news_pic"
        android:text="2016年5月26日"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/icon_news_comment_num"/>
</RelativeLayout>