<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    android:layout_width="match_parent"
    android:layout_height="180dp">

    <com.fjj.wisdomBJ.UI.TouchedNewListViewPager
        android:id="@+id/vp_newslistpage_pic"
        android:layout_width="match_parent"
        android:layout_height="180dp"></com.fjj.wisdomBJ.UI.TouchedNewListViewPager>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#33000000"
        android:paddingBottom="10dp"
        android:paddingTop="10dp">

        <TextView
            android:id="@+id/tv_newslistpage_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="我是图片说明文字"
            android:textColor="#ffffff"/>

        <LinearLayout
            android:id="@+id/ll_newslistpage_point"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>